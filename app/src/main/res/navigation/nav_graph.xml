<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/TasksFragment">

    <fragment
        android:id="@+id/TasksFragment"
        android:name="com.dpycb.protracker.presentation.TaskFragment"
        android:label="Текущие задачи"
        tools:layout="@layout/task_fragment">
    </fragment>

    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.dpycb.protracker.presentation.SettingsFragment"
        android:label="Настройки"
        tools:layout="@layout/settings_fragment">
    </fragment>

    <action
        android:id="@+id/to_SettingsFragment"
        app:destination="@id/SecondFragment" />

    <action
        android:id="@+id/to_TasksFragment"
        app:destination="@id/TasksFragment" />
</navigation>