<resources>

    <style name="Theme.ProTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_night</item>
        <item name="colorOnPrimary">@color/on_primary_night</item>

        <item name="colorSurface">@color/surface_night</item>
        <item name="colorOnSurface">@color/on_surface_night</item>

        <item name="android:colorBackground">@color/background_night</item>
        <item name="colorOnBackground">@color/on_background_high_night</item>

        <item name="colorSecondary">@color/secondary_night</item>
        <item name="colorOnSecondary">@color/on_secondary_night</item>

        <item name="colorAccent">@color/accent_night</item>

        <item name="android:statusBarColor">@color/background_night</item>
    </style>

    <style name="Theme.ProTracker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ProTracker.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.ProTracker.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>